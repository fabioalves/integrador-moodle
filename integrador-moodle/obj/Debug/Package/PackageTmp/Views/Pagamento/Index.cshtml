@model integrador_moodle.Models.Pagamento

@{
    ViewBag.Title = "Pagamento";
    Layout = "~/Views/Shared/_Layout.cshtml";
    integrador_moodle.Models.Curso curso = ViewBag.curso;
    List<integrador_moodle.Models.BandeiraCartao> bandeiras = ViewBag.bandeiras;
}

<p>
    <h3>Curso: @curso.fullname</h3>
    <h3>Valor: R$ @curso.valor</h3>
</p>
    
    
<fieldset>
    
    @using (Html.BeginForm("Pagar", "Pagamento", new { id = curso.cursoUID }, FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <h3 class="titulo_noticia">Escolha a forma de pagamento</h3>
        <br /><br />
        <p>
        @foreach (var bandeira in bandeiras)
        {
            <label class="radio">
            @Html.RadioButton("bandeira", bandeira.bandeiraCartaoUID)
            @bandeira.nome
            </label>
        }  
        </p>      
        <p>
            <label>Quantidade de Parcelas</label>
            <select name="parcela">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
            </select>
        </p>
        <input type="submit" class="btn" value="Comprar" />
        
        
    }
    

</fieldset>
