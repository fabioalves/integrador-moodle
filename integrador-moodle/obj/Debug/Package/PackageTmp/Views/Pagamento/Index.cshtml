@model integrador_moodle.Models.Pagamento

@{
    ViewBag.Title = "Pagamento";
    Layout = "~/Views/Shared/_Layout.cshtml";
    integrador_moodle.Models.Curso curso = ViewBag.curso;
    List<integrador_moodle.Models.FormaPagamento> formasPagamento = ViewBag.formasPagamento;
}

<p>
    <h3>Curso: @curso.fullname</h3>
    <h3>Valor: R$ @curso.valor</h3>
</p>
    
    
<fieldset>
    
    @using (Html.BeginForm("Pagar", "Pagamento", new { id = curso.cursoUID }, FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <h3 class="titulo_noticia">Escolha a forma de pagamento</h3>
        <br /><br />
        <p>
        @foreach (var forma in formasPagamento)
        {
            <label class="radio">
            @Html.RadioButton("formapagamento", forma.formaPagamentoUID)
            @forma.descricao
            </label>
        }  
        </p>      
        <input type="submit" class="btn" value="Comprar" />
        
        
    }
    

</fieldset>
