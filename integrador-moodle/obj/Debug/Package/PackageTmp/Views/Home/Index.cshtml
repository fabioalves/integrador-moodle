@model IEnumerable<integrador_moodle.Models.Curso>
@{
    ViewBag.Title = "Cursos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model != null)
{
    <table class="table table-striped">
        <thead>
            <tr>
            <th>
                Nome do Curso
            </th>
            <th>
                Descrição
            </th>
            <th>
                Opções
            </th>
            </tr>
        </thead>
        <tbody>
    @foreach (var curso in Model)
    {
            <tr>
            <td>
                @curso.fullname
            </td>
            <td>
                @curso.descricao
            </td>        
            <td>
                @Html.ActionLink("Inscreva-se", "PossuiCadastro", "Inscricao", new { id = curso.cursoUID }, null)                
            </td>
            </tr>
    }
        </tbody>
    </table>
}
